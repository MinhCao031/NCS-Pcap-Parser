    "version": "0.2.0",
    "configurations": [
        {
            "name": "Open a core dump(C/C++)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main.o",
            "coreDumpPath": "${input:coreFileName}",
            "cwd": "${fileDirname}",
            "MIMode": "gdb"
        },
        {
            "name": "Debug C/C++ program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/run/tshark",
            "args": [
                "-r",
                "/media/lucifer/DATA/IMPORTANTS/code/NCS-Pcap-Parser/data/smtp.pcap",
            ],
            "cwd": "${workspaceFolder}",
        }
    ],
    "inputs": [
        {
            "id": "coreFileName",
            "type": "promptString",
            "description": "Enter core file path"
        }
    ]
}